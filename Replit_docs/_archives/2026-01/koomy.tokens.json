{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Koomy Design Tokens",
  "version": "1.0.0",
  "date": "2026-01-13",
  
  "colors": {
    "primary": {
      "default": "#44A8FF",
      "light": "#80C4FF",
      "dark": "#1673CC",
      "foreground": "#FFFFFF",
      "hsl": "207 100% 63%"
    },
    "secondary": {
      "default": "#40BFBF",
      "foreground": "#FFFFFF",
      "hsl": "180 50% 50%"
    },
    "background": {
      "default": "#F8FAFC",
      "hsl": "210 40% 98%"
    },
    "foreground": {
      "default": "#333D4D",
      "hsl": "220 20% 25%"
    },
    "card": {
      "default": "#FFFFFF",
      "foreground": "#333D4D",
      "hsl": "0 0% 100%"
    },
    "muted": {
      "default": "#F1F5F9",
      "foreground": "#6B7280",
      "hsl": "210 30% 96%"
    },
    "accent": {
      "default": "#E8F4FF",
      "foreground": "#1673CC",
      "hsl": "207 50% 95%"
    },
    "border": {
      "default": "#E2E8F0",
      "hsl": "210 30% 90%"
    },
    "input": {
      "default": "#E8EDF2",
      "hsl": "210 30% 92%"
    },
    "ring": {
      "default": "#44A8FF",
      "hsl": "207 100% 63%"
    },
    "destructive": {
      "default": "#EF4444",
      "foreground": "#FAFAFA",
      "hsl": "0 84% 60%"
    },
    "success": {
      "default": "#22C55E",
      "foreground": "#FFFFFF",
      "note": "Recommended, not defined in repo"
    },
    "warning": {
      "default": "#F59E0B",
      "foreground": "#FFFFFF",
      "note": "Recommended, not defined in repo"
    },
    "sidebar": {
      "default": "#1B5C99",
      "foreground": "#FAFAFA",
      "primary": "#44A8FF",
      "accent": "#2575B3",
      "border": "#3A7BB8",
      "hsl": "207 80% 35%"
    },
    "chart": {
      "1": "#44A8FF",
      "2": "#40BFBF",
      "3": "#6366F1",
      "4": "#F59E0B",
      "5": "#EF4444"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "'Nunito', 'Inter', sans-serif",
      "heading": "'Nunito', 'Montserrat', sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.2,
      "snug": 1.3,
      "normal": 1.5,
      "relaxed": 1.6
    },
    "scale": {
      "h1": { "size": "2.25rem", "weight": 700, "lineHeight": 1.2 },
      "h2": { "size": "1.875rem", "weight": 700, "lineHeight": 1.25 },
      "h3": { "size": "1.5rem", "weight": 600, "lineHeight": 1.3 },
      "h4": { "size": "1.25rem", "weight": 600, "lineHeight": 1.4 },
      "h5": { "size": "1.125rem", "weight": 600, "lineHeight": 1.4 },
      "h6": { "size": "1rem", "weight": 600, "lineHeight": 1.5 },
      "body": { "size": "1rem", "weight": 400, "lineHeight": 1.6 },
      "bodySmall": { "size": "0.875rem", "weight": 400, "lineHeight": 1.5 },
      "caption": { "size": "0.75rem", "weight": 400, "lineHeight": 1.4 }
    }
  },

  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem"
  },

  "radius": {
    "none": "0",
    "sm": "0.75rem",
    "md": "0.875rem",
    "lg": "1rem",
    "xl": "1.25rem",
    "full": "9999px",
    "base": "1rem"
  },

  "shadow": {
    "xs": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "sm": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "default": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "koomy-card": "0 4px 24px -4px rgba(68, 168, 255, 0.12), 0 2px 8px -2px rgba(0, 0, 0, 0.06)",
    "koomy-glow": "0 0 40px 10px rgba(68, 168, 255, 0.25)"
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "default": "ease",
      "in": "ease-in",
      "out": "ease-out",
      "inOut": "ease-in-out"
    }
  },

  "components": {
    "button": {
      "sizes": {
        "sm": { "height": "32px", "paddingX": "12px", "fontSize": "0.75rem" },
        "default": { "height": "36px", "paddingX": "16px", "fontSize": "0.875rem" },
        "lg": { "height": "40px", "paddingX": "32px", "fontSize": "0.875rem" },
        "icon": { "size": "36px" }
      },
      "radius": "0.375rem"
    },
    "input": {
      "height": "36px",
      "paddingX": "12px",
      "radius": "0.375rem"
    },
    "card": {
      "padding": "24px",
      "radius": "12px"
    },
    "badge": {
      "paddingX": "10px",
      "paddingY": "2px",
      "fontSize": "0.75rem",
      "radius": "0.375rem"
    },
    "dialog": {
      "maxWidth": "512px",
      "padding": "24px",
      "radius": "0.5rem"
    },
    "toast": {
      "maxWidth": "420px",
      "padding": "24px",
      "radius": "0.375rem"
    }
  },

  "icons": {
    "library": "lucide-react",
    "style": "stroke",
    "strokeWidth": 2,
    "sizes": {
      "sm": "16px",
      "md": "20px",
      "lg": "24px"
    }
  }
}
